@page
@model ProiectMediiBun.Pages.Memberships.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Membership</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.MembershipName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.MembershipName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.Data_Start)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.Data_Start)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.Data_Expirare)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Membership.Data_Expirare)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Membership.MembershipCategories)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Membership.MembershipCategories != null)
            {
                <ul>
                    @foreach (var category in Model.Membership.MembershipCategories)
                    {
                        <li>@category.Category.CategoryName</li>
                    }
                </ul>
            }
            else
            {
                <span>Nu are categorii</span>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Membership.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
