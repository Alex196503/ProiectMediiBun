@page
@model ProiectMediiBun.Pages.Memberships.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Membership</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Membership.MembershipName" class="control-label"></label>
                <input asp-for="Membership.MembershipName" class="form-control" />
                <span asp-validation-for="Membership.MembershipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Membership.Data_Start" class="control-label"></label>
                <input asp-for="Membership.Data_Start" class="form-control" />
                <span asp-validation-for="Membership.Data_Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Membership.Data_Expirare" class="control-label"></label>
                <input asp-for="Membership.Data_Expirare" class="form-control" />
                <span asp-validation-for="Membership.Data_Expirare" class="text-danger"></span>
            </div>
            <div class="form-group">
            <div class="table">
            <table>
            <tr>
             @{
             int contor = 0;
            foreach (var cat in Model.AssignedCategoryDataList)
            {
             if (contor++ % 3 == 0)
            {
            @:</tr><tr>
               }
            @:<td>
             <input type="checkbox"
            name="categoriiselectate"
            value="@cat.CategoryID"
            @(Html.Raw(cat.Assigned ?
            "checked=\"checked\"" : "")) />
            @cat.CategoryID @: @cat.Name
            @:</td>
               }
            @:</tr>
            }
            </table>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
